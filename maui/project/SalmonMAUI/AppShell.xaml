<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Salmon.Vault.MAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Salmon.Vault.MAUI"
    xmlns:salmon="clr-namespace:Salmon.Vault.View"
    Shell.FlyoutBehavior="Disabled"
    Title="Salmon Vault Beta">
    <ShellContent Style="{StaticResource MyPageStyle}"
        ContentTemplate="{DataTemplate salmon:MainWindow}"
        Route="MainWindow" />
    <Shell.Resources>
        <Style x:Key="MyPageStyle" TargetType="Element">
            <Setter Property="Shell.BackgroundColor" Value="Purple" />
            <Setter Property="Shell.TitleColor" Value="Yellow" />
            <Setter Property="Shell.FlyoutBackdrop" Value="Yellow" />
            <Setter Property="Shell.FlyoutBackground" Value="Yellow" />
            <Setter Property="Shell.TabBarBackgroundColor" Value="Yellow" />
        </Style>
    </Shell.Resources>
</Shell>
